<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgChangePhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_user"
        android:elevation="8dp"
        app:border_width="2dp"
        app:border_color="#FFF"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textViewChangePhoto" />

    <TextView
        android:id="@+id/textViewChangePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Photo"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imgChangePhoto"/>

    <TextView
        android:id="@+id/txtViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textViewChangePhoto"
        android:layout_alignStart="@+id/txtFldEditUsername" />

    <EditText
        android:id="@+id/txtFldEditUsername"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:backgroundTint="@color/colorAccent"
        android:textCursorDrawable="@drawable/cursor_text_white"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txtViewUsername"
        android:layout_marginStart="35dp"
        android:background="@drawable/txtfld_rounded"/>


    <TextView
        android:id="@+id/txtViewFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIRST NAME"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/txtFldEditUsername"
        android:layout_alignStart="@+id/txtFldEditUsername"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/txtFldEditFirstname"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:textCursorDrawable="@drawable/cursor_text_white"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/txtViewFirstname"
        android:background="@drawable/txtfld_rounded"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:id="@+id/txtViewLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAST NAME"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtFldEditFirstname"
        android:layout_alignEnd="@+id/txtViewFirstname" />


    <EditText
        android:id="@+id/txtFldEditLastname"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:textCursorDrawable="@drawable/cursor_text_white"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/txtViewLastname"
        android:background="@drawable/txtfld_rounded"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:id="@+id/txtViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/txtFldEditLastname"
        android:layout_alignStart="@+id/txtViewLastname"
        android:layout_marginTop="11dp" />


    <EditText
        android:id="@+id/txtFldEditEmail"
        android:inputType="textEmailAddress"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:textCursorDrawable="@drawable/cursor_text_red"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/txtViewEmail"
        android:background="@drawable/txtfld_rounded"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp"/>

    <TextView
        android:id="@+id/txtViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDRESS"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/txtFldEditEmail"
        android:layout_alignStart="@+id/txtViewEmail"
        android:layout_marginTop="13dp" />

