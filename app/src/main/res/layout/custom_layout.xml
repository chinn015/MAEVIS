<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="55dp"
        app:cardCornerRadius="1dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:id="@+id/viewReportLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgViewProfilePic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                android:src="@drawable/img_user"
                app:border_color="#FFF"
                app:border_width="2dp"
                app:layout_anchorGravity="top|center_horizontal"
                app:layout_scrollFlags="scroll" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imgViewProfilePic">

                <ImageView
                    android:id="@+id/viewReportType"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/btn_fire"
                    android:layout_below="@+id/viewReportHead"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/viewReportHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="2"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:text="Hello World"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"  />

                <TextView
                    android:id="@+id/viewReportDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="datetime"
                    android:textSize="12dp"
                    android:layout_alignBottom="@+id/viewReportType"
                    android:layout_toEndOf="@+id/viewReportType" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reportBottomLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/viewReportDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="98dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maevis_logo"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView" />
</LinearLayout>