<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.user.maevis.EmailVerification">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/verifyText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please check your email and click the link to verify your account."
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/resendText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="If email isn't received after 60 seconds, press Resend Email."
        android:textSize="15dp"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/resendEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Resend Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resendText"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="30sp"
        android:layout_below="@+id/verifyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:progress="100"
        android:progressDrawable="@drawable/progressbar_states"
        android:layout_below="@+id/verifyText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/proceedButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Proceed"
        android:layout_below="@+id/resendEmail"
        android:layout_alignStart="@+id/resendEmail" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/proceedButton"/>

</RelativeLayout>
