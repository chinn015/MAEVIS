<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.user.maevis.Login"
    android:background="@drawable/bg_signup">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/maevis_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME!"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Complete your sign up by setting your birthday and home location"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtFldBirthdate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:background="@drawable/txtfld_rounded"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:hint="Birthdate"
        android:textColorHint="#FFFFFF"
        android:textSize="17dp"
        android:textCursorDrawable="@drawable/cursor_text_white"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/txtFldAddress"
        android:paddingLeft="15dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:maxLines="4"
        autofit:minTextSize="16sp"
        android:text=""
        android:hint="Address [Street, Brgy, City]"
        android:background="@drawable/txtfld_rounded"
        android:layout_below="@+id/txtFldBirthdate"
        android:layout_alignStart="@+id/txtFldBirthdate"
        android:layout_marginBottom="20dp"
        android:textCursorDrawable="@drawable/cursor_text_white"
        android:paddingTop="8dp"
        android:paddingRight="4dp"
        android:textColorHint="@color/colorAccent"
        android:paddingBottom="8dp"
        />
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Create Account"
        android:background="@drawable/btn_rounded"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:layout_below="@+id/txtFldAddress"
        android:layout_alignStart="@+id/txtFldAddress"
        />

</RelativeLayout>
