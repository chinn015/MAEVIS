<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.user.maevis.Login"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/txtChoose"
        android:layout_width="fill_parent"
        android:layout_height="272dp"
        android:gravity="center"
        android:text="CHOOSE THE TYPE OF EMERGENCY"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>



    <ImageButton
        android:id="@+id/btnFire"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:background="@mipmap/btn_fire1"
        android:layout_alignTop="@+id/btnFlood"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_marginStart="88dp" />

    <ImageButton
        android:id="@+id/btnFlood"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/btn_flood1"
        android:layout_marginBottom="127dp"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp" />
    
    <ImageButton
        android:id="@+id/btnAccident"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/btn_accident1"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/btnFire"
        android:layout_toEndOf="@+id/btnFire" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtChoose"
        android:layout_marginTop="60dp"
        android:weightSum="1"
        android:layout_marginLeft="50dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/txtFlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="FLOOD"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:layout_marginRight="50dp"/>

        <TextView
            android:id="@+id/txtFire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRE"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/txtAccident"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="VEHICULAR ACCIDENT"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal"
            android:layout_below="@+id/btnFire"
            android:layout_alignParentEnd="true" />
    </LinearLayout>


</RelativeLayout>
