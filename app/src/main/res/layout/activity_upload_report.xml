<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.user.maevis.UploadReport">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtFldLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_below="@+id/appBarLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/reportIconType"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_marker_fire"
        android:layout_above="@+id/txtFldLocation"
        android:layout_toEndOf="@+id/txtFldLocationLabel" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/txtFldLocation"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:layout_below="@+id/txtFldLocationLabel"
        android:maxLines="3"
        autofit:minTextSize="16sp"
        android:background="@drawable/border_bottom"
        android:text=""
        />

    <TextView
        android:id="@+id/txtFldDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_below="@+id/txtFldLocation"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/txtFldDescription"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollHorizontally="false"
        android:textColor="@color/colorPrimary"
        android:hint="Write something about this report."
        android:textSize="16sp"
        android:textColorHint="#838282"
        android:layout_marginLeft="15dp"
        android:textCursorDrawable="@drawable/cursor_text_red"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtFldDescriptionLabel"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:background="@drawable/border_bottom"
        android:layout_marginRight="5dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/fab"
        android:layout_below="@+id/txtFldDescription"
        android:layout_alignStart="@+id/txtFldLocation"
        android:background="@color/colorPrimary"
        android:text="Add Photo"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:typeface="normal"
        android:layout_centerInParent="true"
        android:layout_marginRight="8dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fab">
        <include layout="@layout/content_add_image" />
    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

</ScrollView>